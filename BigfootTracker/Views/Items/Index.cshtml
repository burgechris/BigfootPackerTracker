@using BigfootTracker.Models;

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>Bigfoot Tracker Pack List</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
        <link rel="stylesheet" type="text/css" media="screen" href="~/css/site.css">
        <script src="main.js"></script>
    </head>
    <body>
        <div class="container">
            <h1>Pack List</h1>
            <h3>Total Backpack Weight: @Item._backpackWeight</h3>
            @if (Model.Count == 0)
            {
                <p>Your backpack is empty. You are under-prepared.</p>
            }
            <form action="/items/remove" method="post">
                <div class="form-check">
                <ul>
                    @foreach (Item item in Model)
                    {
                        <li><input class="form-check-input" type="checkbox" name ="id" value="@item.Id"><a href='/items/@item.Id'>@item.Name</a></li>
                    }
                </ul>
                </div>
                <button class="btn btn-primary" id="btn-delete" type="submit" name="button">Remove An Item</button>
            </form>

            <!-- <form class="form-group" method="post">
            <button class="btn btn-primary" formaction="/items/new" type="click" name="button">Add More Supplies</button>
            </form> -->
            <a href="/items/new"><button class="btn btn-primary" type="click" name="button">Add More Supplies</button></a>
        </div> 
    </body>
</html>






