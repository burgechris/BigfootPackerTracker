@using BigfootTracker.Models;

<h1>Pack List</h1>
<h3>Total Backpack Weight: @Item._backpackWeight</h3>
@if (Model.Count == 0)
{
    <p>Your backpack is empty. You are under-prepared.</p>
}
<ul>
    @foreach (Item item in Model)
    {
        <li><a href='/items/@item.Id'>@item.Name</a></li>
    }
</ul>

<a href="/items/new">Add more supplies.</a>

<form action="/items/delete" method="post">
  <button type="submit" name="button">Remove An Item</button>
</form>
